; train_eval_infer.config
; 2025/08/26 (C) antillia.com
; Tiled-IDRiD-HardExudates segmentation
[model]
model         = "TensorFlowFlexUNet"

generator     =  False

image_width    = 512
image_height   = 512
image_channels = 3
input_normalize = False
normalization  = False
num_classes    = 2

base_filters   = 16
base_kernels   = (9,9)
num_layers     = 8
dropout_rate   = 0.04
dilation       = (3,3)

; Model compilation parameters
optimizer       = "Adam"

learning_rate  = 0.00005
clipvalue      = 0.5

; Specify "categorical_crossentropy" function to loss
; for categoraized(one-hot-encoded) mask 
loss           = "categorical_crossentropy"
metrics        = ["dice_coef_multiclass"]

show_summary   = False

[dataset]
class_name    = "ImageCategorizedMaskDataset"

[train]
epochs        = 100
batch_size    = 2


; EarlyStopping parameter
patience      = 10

metrics       = ["dice_coef_multiclass", "val_dice_coef_multiclass"]

model_dir     = "./models/"
eval_dir      = "./eval/"
images_dir    = "../../../dataset/Tiled-IDRiD-HardExudates/train/images/"
masks_dir     = "../../../dataset/Tiled-IDRiD-HardExudates/train/masks/"

create_backup  = False

; learning_rate_reducer callback parameter
learning_rate_reducer = True
reducer_factor     = 0.5
reducer_patience   = 4

epoch_change_infer           = False
epoch_change_infer_dir       =  "./epoch_change_infer"
epoch_change_tiled_infer     = True
epoch_change_tiled_infer_dir =  "./epoch_change_tiled_infer"

num_infer_images       = 6

; Model saving option
save_weights_only  = True

[valid]
images_dir = "../../../dataset/Tiled-IDRiD-HardExudates/valid/images/"
masks_dir  = "../../../dataset/Tiled-IDRiD-HardExudates/valid/masks/"

[test] 
images_dir = "../../../dataset/Tiled-IDRiD-HardExudates/test/images/"
masks_dir  = "../../../dataset/Tiled-IDRiD-HardExudates/test/masks/"

[infer] 
images_dir    = "./mini_test/images/"
output_dir    = "./mini_test_output/"

[tiledinfer] 
overlapping = 64
images_dir    = "./mini_test/images/"
output_dir    = "./mini_test_output_tiled/"

[image]
color_order = "RGB"

[mask]
mask_file_format = ".png"

; 1+1 classes
; RGB colors    HardExudates:red     
rgb_map = {(0,0,0):0,(255,0,0):1,}


